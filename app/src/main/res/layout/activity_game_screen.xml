<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameScreenA">

    <!--The text for if it is Player 1, Player 2, or CPU turn-->
    <TextView
        android:id="@+id/Player_Turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/player1_turn"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <!--Set the images in 3 rows of 4-->
    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--The Images on the first row-->
            <ImageButton
                android:id="@+id/img1"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img2"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img3"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--The Images on the first row-->
            <ImageButton
                android:id="@+id/img4"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img5"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img6"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--The Images on the first row-->
            <ImageButton
                android:id="@+id/img7"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img8"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <ImageButton
                android:id="@+id/img9"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/player1_ScoreboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player ScoreA:"/>
    <TextView
        android:id="@+id/player1_Scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:id="@+id/player2_ScoreboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Score:"/>
    <TextView
        android:id="@+id/player2_Scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:id="@+id/cpu_ScoreboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Score:"/>
    <TextView
        android:id="@+id/cpu_Scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
</LinearLayout>